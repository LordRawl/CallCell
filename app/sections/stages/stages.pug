mixin stages()
  <!--begin stages-->
  +b('section').stages.fade&attributes(attributes)
    .container
      +e.content
        +e('h2').title.title.fade-bottom Этапы работы

        +e.wrapper
          +e('ul').list
            each item, idx in getData('stages').list
              +e('li').item(class=`__item-${idx+1}`)
                +e.img-wrapper(class=`__img-wrapper-${idx+1}`)
                  +e('img').img.lazy(data-src=`assets/images/stages/${item.icon}.svg` alt=item.alt, width="70", height="70")
                
                +e('p').text !{item.text}
          
          | !{getData('stages').line}
          +e('img').line-mobile.lazy(data-src="assets/images/stages/stages-line-mobile.svg" alt="Пунктирная линия" width="154" height="637")

        +e('svg').infinite(viewBox="0 0 147 82")
          +e('path')(d="M38.07 68.32c7.08 7.19 17.71 13.11 30.55 12.68 39.61-1.63 75.45-40.83 77.31-61 1.23-14.88-13.12-23.46-20.85-16.6-22.7 18.6-33.98 45.76-55.68 55.34-19.15 10.07-35.78 12.63-53.11 4.57-9.65-4.48-15.66-11.23-15.29-19.87 1.51-6.15 5.79-7.36 9.71-6.29 9.22 2.85 15.81 19.08 27.36 31.17z" stroke-linecap="round" stroke-linejoin="round")

    +dashed-line.__dashed-line


  <!--end stages-->
    
    