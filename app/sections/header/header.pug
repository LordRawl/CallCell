mixin header()
  <!--begin header-->
  +b('header').header&attributes(attributes)
    .container
      +e.content
        +e.block
          +toggle.__toggle

          +logo.__logo

        +e.navbar
          +e('ul').list
            each item in getData('header').navbar
              +e('li').item
                +e('span').hover-border--first
                +e('a').link.js-anchor(href=item.link) #{item.text}
                +e('span').hover-border--last

        +e.block
          +call.__call

          +e.button-wrapper
            +button(type="button" data-modal-target="price").--size--md.__button Перезвоните мне

  <!--end header-->
    
    