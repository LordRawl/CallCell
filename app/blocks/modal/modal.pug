mixin modal()
  +b.modal&attributes(attributes)
    block
    
mixin ui-kit-modal()
  +ui-section
    +ui-section-head
      +ui-title Блок modal
      +ui-path
        p Блок: blocks/modal/modal
      +ui-description
        p Описание Блока
  
    +ui-section-content()
      +modal
      
    //- При +ui-section-content(true) контейнер отсутствует
    //- Для перечисления инлайновых блоков используется миксин +ui-elements-list()
    //- Рамка вокруг особой секции: +ui-special()